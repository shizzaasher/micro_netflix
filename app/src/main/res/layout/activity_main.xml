<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Home"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/featuredImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample" />

            <TextView
                android:id="@+id/featuredTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peninsula"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                android:textSize="40sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/featuredDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Description"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"/>

            <!--CATEGORY NAME FOLLOWED BY RECYCLER VIEW-->

            <TextView
                android:id="@+id/Populartextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Popular"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingBottom="1dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layoutManager="LinearLayoutManager" />

            <TextView
                android:id="@+id/TopRatedtextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Top Rated"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingBottom="1dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layoutManager="LinearLayoutManager" />

            <TextView
                android:id="@+id/Upcomingtextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Upcoming"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingBottom="1dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layoutManager="LinearLayoutManager" />

        </LinearLayout>


    </ScrollView>


</FrameLayout>

